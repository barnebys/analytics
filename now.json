{
  "version": 2,
  "build": {
    "env": {
      "BA_HOST": "@ba-host",
      "BTM_SESSION_TTL": "@btm-session-ttl"
    }
  },
  "env": {
    "SESSION_NAME": "@session-name",
    "SESSION_MAX_AGE": "@session-max-age",
    "SECRET": "@secret",
    "SITE_URL": "@site-url"
  },
  "headers": [
    {
      "source": "/v1/bite.js",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "max-age=31536000, immutable"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/r/event",
      "destination": "api/event"
    },
    {
      "source": "/r/track",
      "destination": "api/track"
    },
    {
      "source": "/v1/bite.js",
      "destination": "bite.v1.js"
    },
    {
      "source": "/(.*)",
      "destination": "https://analytics-v1.barnebys.sh/$1"
    }
  ]
}
