{
  "scope": "barnebys",
  "version": 2,
  "build": {
    "env": {
      "NPM_TOKEN": "@npm-token",
      "BA_HOST": "@ba-host"
    }
  },
  "env": {
    "SESSION_NAME": "@ba-session-name",
    "SESSION_MAX_AGE": "@ba-session-max-age",
    "SECRET": "@ba-secret",
    "SITE_URL": "@ba-site-url",
    "FAUNADB_SECRET": "@ba-faunadb-secret"
  },
  "headers": [
    {
      "source": "/r/collect(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        }
      ]
    },
    {
      "source": "/r/create(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        }
      ]
    },
    {
      "source": "/r/fetch(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "s-maxage=60, stale-while-revalidate"
        }
      ]
    },
    {
      "source": "/v1/bite.js",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "max-age=4320"
        }
      ]
    },
    {
      "source": "/bite.v1.js",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "max-age=4320"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/r/collect",
      "destination": "api/collect"
    },
    {
      "source": "/r/create",
      "destination": "api/reference/create"
    },
    {
      "source": "/r/fetch",
      "destination": "api/reference/fetch"
    },
    {
      "source": "/w/collect",
      "destination": "api/webhook"
    },
    {
      "source": "/v1/bite.js",
      "destination": "bite.v1.js"
    },
    {
      "source": "/(.*)",
      "destination": "https://analytics-v1.barnebys.sh/$1"
    }
  ]
}
